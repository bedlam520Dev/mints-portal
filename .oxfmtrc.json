{
	"$schema": "//home/bedlam/.schemas/oxfmt/configuration_schema.json",
	"allowComments": true,
	"allowTrailingCommas": true,
	"arrowParens": "always",
	"bracketSameLine": false,
	"bracketSpacing": true,
	"embeddedLanguageFormatting": "auto",
	"endOfLine": "lf",
	"experimentalSortImports": {
		"groups": [
			["builtin"],
			["external"],
			["react", "next"],
			["thirdweb", "viem"],
			["@radix-ui"],
			["internal"],
			["@/components/ui"],
			["@/components"],
			["@/lib", "@/hooks", "@/types"],
			["@/config"],
			["@/app"],
			["parent", "sibling", "index"],
			["style", "side-effect"]
		],
		"ignoreCase": true,
		"internalPattern": ["@/**"],
		"newlinesBetween": true,
		"order": "asc",
		"partitionByComment": false,
		"partitionByNewline": false,
		"sortSideEffects": true
	},
	"experimentalSortPackageJson": true,
	"ignorePatterns": [
		"_dev/**/*",
		"_devlogs/**/*",
		".next/**/*",
		".vscode/**/*",
		"node_modules/**/*",
		".env*",
		"*.md",
		"CLAUDE.md",
		"components.json",
		"LICENSE",
		"next-env.d.ts",
		"next.config.ts",
		"pnpm-lock.yaml",
		"postcss.config.mjs",
		"tsconfig.json",
		"tsconfig.tsbuildinfo",
		"public/**/*",
		"tools/**/*"
	],
	"insertFinalNewline": true,
	"jsxSingleQuote": true,
	"objectWrap": "preserve",
	"printWidth": 88,
	"quoteProps": "as-needed",
	"semi": true,
	"singleAttributePerLine": true,
	"singleQuote": true,
	"tabWidth": 2,
	"trailingComma": "es5",
	"useTabs": true
}
